{
  "name": "simple-next-boilerplate",
  "author": "Emil Buszy≈Ço",
  "description": "Simple react boilerplate supported by Next.js framework",
  "scripts": {
    "dev": "NODE_ENV=develop node server.js",
    "build": "yarn clean && yarn && next build",
    "start": "NODE_ENV=production node server.js",
    "test": "jest --watchAll",
    "lint": "eslint components/**/*.js",
    "lint-staged": "lint-staged && yarn lint && yarn test",
    "clean": "rm -rf .next node_modules static",
    "precommit": "yarn lint && yarn test",
    "prepush": "yarn lint"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.4",
    "formik": "^1.4.3",
    "moment": "^2.24.0",
    "next": "^7.0.2",
    "next-routes": "^1.4.2",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "styled-components": "^4.1.3",
    "yup": "^0.26.10"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-plugin-module-resolver": "^3.1.3",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-enzyme": "^7.0.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
